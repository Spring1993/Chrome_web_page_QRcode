{
  "manifest_version": 3,
  "name": "网页二维码",
  "version": "1.0.0",
  "description": "为任何网页生成精美的二维码,支持favicon显示,方便手机扫码访问",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "生成网页二维码"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}

